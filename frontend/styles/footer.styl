.footer
  padding 70px 0 40px
  background color_black
  &__container
    width 50%
    margin 0 auto
  &_title
    position relative
    margin-bottom 60px
    color color_white
    font-size 40px
    text-transform capitalize
    text-align center
    &:after
      content ''
      position absolute
      bottom -30px
      left calc(50% - 85px)
      width 170px
      height 2px
      background-color color_blue
  &_subtitle
    color color_white
    font-size 13px
    text-align center
    line-height 1.4
  &__form
    display flex
    flex-flow row wrap
    justify-content space-between
    &_input
      box-sizing: border-box
      width 100%
      height 50px
      border none
      border-bottom 2px solid white
      padding-left 20px
      background transparent
      font-size 15px
      color color_white
      &::-webkit-input-placeholder
        color color_white
      &:-moz-placeholder
        color color_white
      &::-moz-placeholder
        color color_white
      &:-ms-input-placeholder
        color color_white
      &:focus
        outline none
    &_submit
      float right
      padding 15px 35px
      margin-top 30px
      border 1px solid color_blue
      color color_white
      text-transform capitalize
      font-weight 100
      cursor: pointer
      transition: .3s
      &:hover
        background-color: color_blue
        color: color_black
      &:active
        opacity: .8
  &__input-wrap
    width 100%
    margin-top 60px
    position relative
    &:before, &:after
      content ''
      position absolute
      bottom 0
      display block
      width 2px
      height 10px
      background-color color_white
    &:after
      right 0
    &--half
      width 48%
  &__copyright
    display block
    margin-top 145px
    color color_white
    text-align center
    &_link
      margin: 0 5px
      color color_blue
      cursor: pointer

@media all and (max-width: width_sm)
  .footer
    &__input-wrap--half
      width 100%
    &__form_submit
      float none
      display block
      text-align center
      margin-top 65px

