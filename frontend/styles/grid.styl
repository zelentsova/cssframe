.f-block
  margin-top: 40px
  margin-bottom: 40px

.f-container
  width 100%
  margin-left auto
  margin-right auto
  max-width width-content_lg
  &--flex-row-between
    display flex
    flex-flow row nowrap
    justify-content: space-between

w-container = 10, 20, 30, 40, 50, 60, 70, 80, 90
for w in w-container
  .f-container--{w}
    @extend .f-container
    width: (w * 1%)

sizes = 'lg', 'md', 'sm'
for size in sizes
  @media all and (max-width: width_ + size)
    .f-container
      max-width: width-content_ + size
